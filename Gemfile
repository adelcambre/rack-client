only :release do
  gem 'rack'
  gem 'rack-test'
  gem 'halorgium-actionpack', '=3.0.pre'
end

only :test do
  gem 'rake'
  gem 'sinatra', :require_as => 'sinatra/base'
  gem 'rspec', :require_as => 'spec'
  gem 'rack-contrib', :require_as => 'rack/contrib'
  gem 'ruby-debug'
  gem 'bundler'
  gem 'webrat'
end

disable_system_gems
